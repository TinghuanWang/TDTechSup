.faq-wrap {
    text-align: center;
    padding: 10px 10px 50px 10px;
}

.list {
    padding: 10px 0;
    border-radius: 5px;
    background: #f1f1f1;
    border: 1px solid #ccc;
    text-align: left;
    margin-bottom: 20px;
}

.status {
    font-size: 14px;
    font-weight: normal;
    background: #ccc;
    color: #000;
    padding: 1px 5px;
    border-radius: 5px;
}
.admin{
    font-size:8px;  
    padding:2px;
    background:#179b16;
    color:#fff;
    position: fixed;
    top:10px;
    right:10px;
}
.avatar {
    float:left;
    border-radius: 3px;
    margin: 2px 3px 0 0;
    width: 16px;
    height: 16px;
}

.status-reply {
    background: #179b16;
    color: #fff;
}

.status-wran {
    background: #eaa015;
    color: #fff;
}

.title {
    padding: 0 10px 10px 10px;
    font-size: 16px;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.cont {
    font-size: 14px;
    padding: 0 10px;
    color: #666;
    overflow: hidden;
    max-height: 60px;
}

.info {
    margin-top: 5px;
    padding: 10px 0 0 10px;
    font-size: 14px;
    height: 20px;
    color: #1aad16;
    border-top: 1px solid #ddd;
}

.time {
    float: right;
    text-align: center;
    border-left: 1px solid #ddd;
    width: 55%;
}

.tools {
    width: 100%;
    position: fixed;
    bottom: 10px;
    line-height: 30px;
}

.button {
    margin: 10px 10px 0 10px;
    text-align: center;
}

.blank {
    width: 100%;
    height: 10px;
    background: #fff;
    display: block;
    position: fixed;
    bottom: 0;
}
